.box-mainInfo{
    display: flex;
    background: white;
    border: solid 0.1px #e0d7d7;
    border-radius: 5px;
}
.background-icon-main{
    align-items: center;
    display: flex;
    width: 80px;
    text-align: center;
}
.icon-main{
    margin: auto;
    i{
        font-size: 60px;
        color: white !important;
    }
}
.background-text-main{
    margin-left: 7px;
    padding-top: 10px;
}
.note-main-info{
    margin-bottom: 0px !important;
}
.number-main{
    margin-bottom: 0px !important;
    font-size: 40px;
    font-weight: bold;
}
.box-ticket{
    display: flex;
    position: relative;
    border: solid 1px #e7e7e7;
    border-radius: 3px;
    padding: 10px 15px;
    align-items: center;
    margin-top: 10px;
    p{
        margin: 0px;
    }
    .aktifbutton{
        background: transparent;
        border: none;
        position: absolute;
        right: 0;
        top: 0;
        margin: 0;
        padding: 0;
    }
    .aktif{
        color: green;
    }
    .nonaktif{
        color: red;
    }
}
.outsideBox{
    .editTool{
        height: 0px;
        overflow: hidden;
        opacity: 0;
        transition: opacity 0.5s, height 0.5s linear;
    }
    .hideTool{
        display: none !important;
    }
}
.outsideBox:hover{
    .editTool{
        height: auto;
        opacity: 1;
    }
}
.editButton{
    background: orange;
    padding: 0px 15px;
    opacity: 0.8;
    border: 1px solid whitesmoke;
    cursor: pointer;
}
.editButton:hover{
    opacity: 1;
}
.deleteButton:hover{
    opacity: 1;
}
.deleteButton{
    background: red;
    opacity: 0.8;
    padding: 0px 15px;
    border: 1px solid whitesmoke;
    cursor: pointer;
}